    <ImageView
        android:id="@+id/addImagePostIv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/image_pst"
        android:padding="20dp"
        android:scaleType="centerInside"
         />
     <TextView
         android:fontFamily="@font/poppins_medium"
         android:id="@+id/addDescriptionTv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Description"
         android:layout_marginTop="20dp"
         android:layout_below="@id/addImagePostIv"
         android:layout_centerHorizontal="true"
         android:textStyle="bold"
         android:textSize="18sp"/>
     <com.google.android.material.textfield.TextInputLayout
         android:id="@+id/addDescriptionTil"
         android:layout_width="match_parent"
         android:layout_height="120dp"
         android:layout_marginTop="20dp"

         android:hint="Description"
         android:layout_below="@id/addDescriptionTv">
         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/addDescriptionEt"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>
     </com.google.android.material.textfield.TextInputLayout>
     <Button
         android:background="@drawable/button"
         android:id="@+id/postBtn"
         android:fontFamily="@font/poppins_bold"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="30dp"
         android:layout_below="@id/addDescriptionTil"
         android:text="Add Post"
         android:textColor="@color/white"/>

 </RelativeLayout>